<Window x:Class="ConnectionIomGenerator.UI.Views.IomEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConnectionIomGenerator.UI.Views"
        mc:Ignorable="d"
        Title="Connection Input Editor" 
        Height="550" 
        Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

	<Grid>

		<DockPanel LastChildFill="True">
			<StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right"  Margin="0,10,0,0">
				<Button Content="OK" FontWeight="Bold" MinWidth="100" Command="{Binding OkCommand}" IsDefault="True"/>
				<Button Content="Cancel" MinWidth="100"  Command="{Binding CancelCommand}" IsCancel="True"/>
			</StackPanel>

			<local:ConnectionInputView DataContext="{Binding IomEditorViewModel}" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"/>
		</DockPanel>
	</Grid>
</Window>
