<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFrameworks>net48;net6.0-windows</TargetFrameworks>
    <UseWPF>true</UseWPF>
    <PlatformTarget>x64</PlatformTarget>
    <Configurations>Debug;Release;Debug_NuGet;Release_NuGet</Configurations>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="IdeaStatiCa.Public" Version="24.0.0.3084" />
    <PackageReference Include="IdeaStatiCa.SAF2IOM" Version="24.0.0.3084" />
  </ItemGroup>

  <ItemGroup Condition="$(Configuration.Contains('NuGet'))">
	<PackageReference Include="IdeaStatiCa.PluginLogger" Version="24.0.0.3084" />
  </ItemGroup>
	
  <ItemGroup Condition="'$(Configuration)' == 'Debug' Or '$(Configuration)' == 'Release'">
    <ProjectReference Include="..\..\..\..\src\Logger\IdeaStatiCa.PluginLogger\IdeaStatiCa.PluginLogger.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="SafExamples\saf-example1.xlsx">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
