<Window x:Class="ConApiWpfClientApp.Views.ConnectionLibraryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConApiWpfClientApp.Views"
        mc:Ignorable="d"
        Title="Connection Library" Height="450" Width="800">
	<DockPanel LastChildFill="True">
		<StackPanel DockPanel.Dock="Bottom">
			<Button HorizontalAlignment="Right" Click="Button_Click">Apply</Button>
		</StackPanel>
		<Grid DockPanel.Dock="Top">
			<Grid.ColumnDefinitions>
				<ColumnDefinition></ColumnDefinition>
				<ColumnDefinition Width="Auto"></ColumnDefinition>
				<ColumnDefinition></ColumnDefinition>
			</Grid.ColumnDefinitions>
			<local:DesignItemsView HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
		
			<GridSplitter HorizontalAlignment="Center"
										VerticalAlignment="Stretch"
										Grid.Column="1"
										Width="5">
			</GridSplitter>
		
			<local:DesignItemDetailView  DataContext="{Binding SelectedCdiVM, Mode=OneWay}" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
		</Grid>
	</DockPanel>
</Window>
