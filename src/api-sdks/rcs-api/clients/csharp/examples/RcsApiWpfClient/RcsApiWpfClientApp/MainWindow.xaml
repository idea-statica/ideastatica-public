<Window x:Class="RcsApiWpfClientApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RcsApiWpfClientApp"
        mc:Ignorable="d"
        Title="RcsApi Client" Height="450" Width="800">
	<DockPanel LastChildFill="True">
		<ToolBarTray DockPanel.Dock="Top">

			<ToolBar Band="1">
				<Button Command="{Binding ConnectCommand, Mode=OneWay}">Start service</Button>
				<Button Command="{Binding OpenProjectCommand, Mode=OneWay}" ToolTip=">Open ideaRcs project or create ideaRcs from IOM data">Open Project</Button>
				<Button Command="{Binding CloseProjectCommand, Mode=OneWay}">Close Project</Button>
				<Button Command="{Binding DownloadProjectCommand, Mode=OneWay}">Download</Button>
				<CheckBox Content="Run private service" IsEnabled="{Binding CanStartService}"
				  IsChecked="{Binding RunApiServer, Mode=TwoWay}" IsThreeState="False"
				  ToolTip="Switch between running a new instance IdeaStatica.RcsRestApi or attaching to the running service.">
				</CheckBox>
			</ToolBar>

			<ToolBar Band="1">
				<Button Command="{Binding GetSettingCommand, Mode=OneWay}" ToolTip="Get RCS setting in xml format">Get setting</Button>
				<Button Command="{Binding UpdateSettingCommand, Mode=OneWay}" ToolTip="Update RCS setting from actual xml string in the window">Update setting</Button>
			</ToolBar>
		
			<ToolBar Band="2">
				<Button Command="{Binding CalculationCommand, Mode=OneWay}">Calculate</Button>
				<Button Command="{Binding GetDetailResultsCommand, Mode=OneWay}">Detail results</Button>
			</ToolBar>

			<ToolBar Band="2">
				<Button Content="New RF Css" ToolTip="Create a new reinforced cross-section from a NAV file" Command="{Binding CreateReinfCssCmdAsync}" CommandParameter="New"/>
				<Button Content="Update RF Css" ToolTip="Update a complete existing reinforced cross-section by a template from a NAV file" Command="{Binding UpdateReinfCssCmdAsync}" CommandParameter="Complete"/>
				<Button Content="Update Reinforcement" ToolTip="Update only reinforcement of a reinforced cross-section by a template from a NAV file" Command="{Binding UpdateReinforcementCmdAsync}" CommandParameter="Reinf"/>

				<ComboBox ItemsSource="{Binding ReinforcedCrossSections}" SelectedItem="{Binding SelectedReinforcedCss}" Width="200">
					<ComboBox.ItemTemplate>
						<DataTemplate>
							<TextBlock Text="{Binding Name}" />
						</DataTemplate>
					</ComboBox.ItemTemplate>
				</ComboBox>
		  
				<Button  Content="Update Section" ToolTip="Update data of the selected section. E.g. set a different reinforced css." Command="{Binding UpdateSectionCmdAsync}"/>
			</ToolBar>
		</ToolBarTray>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition></ColumnDefinition>
				<ColumnDefinition></ColumnDefinition>
			</Grid.ColumnDefinitions>
			<ListView  Grid.Row="0" ItemsSource="{Binding Sections}" SelectedItem="{Binding SelectedSection, Mode=TwoWay}" Grid.Column="0" >
				<ListView.ItemContainerStyle>
					<Style TargetType="ListViewItem">
						<Setter Property="HorizontalContentAlignment" Value="Stretch" />
					</Style>
				</ListView.ItemContainerStyle>
				<ListView.View>
					<GridView>
						<GridViewColumn Header="Section name">
							<GridViewColumn.CellTemplate>
								<DataTemplate>
									<StackPanel>
										<TextBlock Text="{Binding Name}"></TextBlock>
									</StackPanel>
								</DataTemplate>
							</GridViewColumn.CellTemplate>
						</GridViewColumn>
					</GridView>
				</ListView.View>
			</ListView>
			<Grid  Grid.Column="1">
				<ScrollViewer VerticalScrollBarVisibility="Auto">
					<TextBox Text="{Binding OutputText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"></TextBox>
				</ScrollViewer>
			</Grid>
		</Grid>
	</DockPanel>
</Window>
